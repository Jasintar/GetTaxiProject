<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory name="sessionFactoryImpl">
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL93Dialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">123</property>
        <property name="hibernate.connection.url">jdbc:postgresql://127.0.0.1:6000/taxiapp</property>

        <!--<property name="connection_pool_size">100</property>-->
        <!--<property name="hbm2ddl.auto">create</property>-->
        <!--<property name="show_sql">true</property>-->
